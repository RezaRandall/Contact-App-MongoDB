<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact List</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">Add New Contact</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success fw-bold mt-3" role="alert"><%= msg %></div>
      <% } %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">No HP</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0 ) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold mt-3" role="alert">Contact did not found!!</div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.name %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a href="/contact/<%= contact.name %> " class="btn btn-success badge rounded-pill bg-success"><i class="bi bi-info-circle"></i> Detail</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
